{# slate
  name = Blurb: View mode 'UBN Blurb primary'
  models[entity] = entity:node
  view_mode[node][blurb] = ubn_blurb_primary
#}
{% import "macros/atom_styles.html.twig" as atom_styles %}
<div class="panel-separator row">
<div class="col-xs-12">
  <div class="blurb-primary">
    <a href={{ entity.field_link.url.value }}>
    {% if not entity.field_image_atom is empty %}
      <div class="story-primary-image">
        {{ atom_styles.hero(entity.field_image_atom) }}
      </div>
      {% endif %}
        <div class="blurb-primary-teaser">
          <h2>{{ entity.title.value }}</h2>
          {% if not entity.field_description is empty %}
            <div class="blurb-primary-teaser-body">{{ entity.field_description.value }}</div>
          {% endif %}
        </div>
    </a>
  </div>
</div>
</div>
