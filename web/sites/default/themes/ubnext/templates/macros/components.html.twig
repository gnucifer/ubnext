{% import "dates.html.twig" as dates %}

{% macro page_head(title, lead, created, namespace) %}
  <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
    <h1 class="page-title">{{ title }}</h1>
    {% if created %}
      {{ dates.default(created) }}
    {% endif %}
    {% if not lead is empty %}
      <p class="lead">{{ lead }}</p>
    {% endif %}
  </div>
{% endmacro %}
