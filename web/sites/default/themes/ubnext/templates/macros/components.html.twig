{% import "dates.html.twig" as dates %}

{% macro page_head(title, lead, created) %}
  <div class="page-head col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
    <h1>{{ title }}</h1>
    {% if created %}
      {{ dates.default(created) }}
    {% endif %}
    {% if not lead is empty %}
      <p class="lead">{{ lead }}</p>
    {% endif %}
  </div>
{% endmacro %}
