{# slate
  name = Nuxeo search
  models[resultlist] = item
#}



<div class="search-nuxeo">
    <section class="result-area">
        <div class="wrap">
            <ul class="result-list">
            {% for item in resultlist.entries %}

                <li>
                    <div class="filename">
                        {{ item.title }}
                    </div>
                    {% if item.properties['dc:description'] %}
                        <div class="description">
                            {{item.properties['dc:description']}}
                        </div>
                    {% endif %}
                    <div class="last-modified">
                       <small> Senast ändrad: {{item.lastModified|date("Y-m-d") }}</small>
                    </div>
                    <div class="toolkit">
                        <a target="_blank" href="{{item.properties['file:content'].data}}"><i class="fa fa-download"></i>Ladda ner</a>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
    </section>

    
        {% if (resultlist['numberOfPages'] <  1) %}
                <p>inga träffar</p>
        {% else %}
            {% if (resultlist['numberOfPages'] > 1) %}
            <nav class="paging-area">
                <ul class="pagination">
                    {% if (resultlist['currentPageIndex'] == 0) %}
                        <li class="disabled">
                    {% else %}
                        <li>
                    {% endif %}
                        <a href="{{base_path()}}{{current_path()}}?page={{ resultlist['currentPageIndex'] -1 }}"><span aria-hidden="true"><i class="fa fa-angle-left"></i></span><span class="sr-only">Previous</span></a>
                    </li>
                {% for i in 0..resultlist['numberOfPages']-1 %}
                        {% if resultlist['currentPageIndex'] == i %}
                            <li class="active"> 
                        {% else %}
                            <li>   
                        {% endif %}
                        <a href="{{base_path()}}{{current_path()}}?page={{ i }}">{{ i + 1}}</a> 
                        </li>
                {% endfor %}

                    {% if (resultlist['currentPageIndex'] == resultlist['numberOfPages']-1) %}
                        <li class="disabled">
                    {% else %}
                        <li>
                    {% endif %}
                        <a href="{{base_path()}}{{current_path()}}?page={{ resultlist['currentPageIndex'] +1 }}"><span aria-hidden="true"><i class="fa fa-angle-right"></i></span><span class="sr-only">Next</span></a>
                        </li>
                </ul>
            </nav>
            {% endif %}
        {% endif %}

</div>

