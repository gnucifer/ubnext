{# slate
  name = Nuxeo search
  models[resultlist] = item
#}



<div class="search-nuxeo">
    <section class="search-area">
        <!--<form class="search-nuxeo-form" method="get" action="" >
            <input class="form-control" name="query" type="search" placeholder="Sök efter allt..">   
            </input>
            <button type="submit" class="btn btn-primary">Sök</button>
        </form>-->
    </section>

    <section class="result-area">
        <div class="wrap">
            <ul class="result-list">
            {% for item in resultlist.entries %}
                {{dump(item.properties['dc:title'])}}
                <li>
                    <div class="filename">
                        {{ item.title }}
                    </div>
                    <div class="last-modified">
                       <small> Senast ändrad: {{item.lastModified|date("Y-m-d") }}</small>
                    </div>
                    <div class="toolkit">
                        <a target="_blank" href="{{item.properties['file:content'].data}}"><i class="fa fa-download"></i>Ladda ner</a>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
    </section>

    <nav class="paging-area">
        <ul class="pagination">
            <li class="disabled"><a href="#"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
        {% for i in 0..resultlist['numberOfPages']-1 %}
                {% if resultlist['currentPageIndex'] == i %}
                    <li class="active"> 
                {% else %}
                    <li>   
                {% endif %}
                <a href="{{base_path()}}{{current_path()}}?page={{ i }}">{{ i + 1}}</a> 
                </li>
        {% endfor %}
            <li class="disabled"><a href="#"><span aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
        </ul>
        
    </nav>
</div>

