{# slate
  name = Library: Library Contact
  models[library] = entity:node
#}
<div class="contact-library">
    <div class="wrap">
        <main>
            <div class="adress-container">
                <div class="wrap">
                    <div class="adress">
                        <div class="first-adress">
                            {% if library.field_library_mailing_address %}
                                <div class="header-field">{{ library.label }}</div>
                                <div class="body-field">{{ library.field_library_mailing_address | nl2br}}</div>
                            {% endif %}
                        </div>
                        <div class="second-adress">
                            {% if library.field_library_visiting_address %}
                                <div class="header-field">{{ library.field_library_visiting_address._label }}</div>
                                <div class="body-field">{{ library.field_library_visiting_address | nl2br }}</div>
                            {% endif %}
                        </div>
                        <div class="third-adress">
                            {% if library.field_library_delivery_address %}
                                <div class="header-field">{{ library.field_library_delivery_address._label }}</div>
                                <div class="body-field">{{ library.field_library_delivery_address | nl2br }}</div>
                            {% endif %}
                        </div>
                        <div class="phone">
                            {% if library.field_library_phone %}
                                <div class="header-field">{{ library.field_library_phone._label }}</div>
                                <div class="body-field">{{ library.field_library_phone }}</div>
                            {% endif %}
                        </div>

                    </div>
                    <div class="contact-form">
                        <form>
                            <div class="form-group">
                                <label class="sr-only" for="name">{{ t('Name')}}</label>
                                <input type="text" id="name" class="form-control" placeholder="{{ t('Name')}}">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="e-mail">E-post</label>
                                <input type="text" id="e-mail" class="form-control" placeholder="{{ t('E-mail (if you want response)')}}">
                            </div>
                            <div class="form-group">
                                <textarea rows="10" class="form-control" placeholder="{{t('Message')}}"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" id="send-form-btn" value="Skicka meddelande">
                            </div>
                        </form>
                    </div>
                </div>
        </main>
    </div>
</div>
